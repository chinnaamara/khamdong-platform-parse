section.container
    .row
        .col-lg-12
            .panel.panel-primary
                .panel-heading Sent Messages
                .panel-body
                    .loader-div(ng-show='loading')
                        h4 Loading, Please wait...
                    .main-div
                        //a.btn.btn-danger.pull-left.btn-sm(title='Delete')
                        //    i.glyphicon.glyphicon-remove
                        .search.col-xs-4.pull-right
                            input(type="search", class="form-control", ng-model="searchTerm", placeholder="search messages..")
                        .table-responsive
                            table#messagesTable(class="table table-striped table-bordered table-condensed")
                                thead
                                    tr
                                        th.smallTd #
                                        th To
                                        th Message
                                        th Date Time
                                tbody
                                    tr(ng-repeat='msg in messages | orderByPriority | filter : searchTerm')
                                        td
                                            a.btn.btn-danger.pull-left.btn-sm(title='Delete', ng-click='deleteMessage(msg)')
                                                i.glyphicon.glyphicon-remove

                                        td
                                            span {{ msg.numbers }}
                                        td
                                            span {{ msg.messageText }}
                                        td
                                            span {{ msg.dateTime }}
