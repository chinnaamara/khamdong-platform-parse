section.container
    .col-lg-12.col-md-12.col-sm-12.col-xs-12
        div
            h2.text-center Grievances of {{ pageTitle }}
        div
            .alert.alert-info(ng-show='loading')
                | Loading Grievances...
            .main-div(ng-show="loadDone")
                .row
                    .col-xs-4.pull-left
                        button.btn.btn-info.btn-sm(ui-sref='newGrievance', title="Create New Grievance")
                            i.glyphicon.glyphicon-plus
                            |   Create New
                    .col-xs-8
                        .pull-right.form-inline
                            select.input-sm.form-control.btn-primary(
                            name='selectFilter',
                            ng-model='columnName',
                            ng-change='filterGrievances()',
                            required)
                                option(value='', selected) -- Load Grievances --
                                option(value='ward') By Ward
                                option(value='submittedUser') By User
                            input(type="search", class="input-sm form-control", ng-model="searchKey", placeholder="Enter Mobile Number", title='enter mobile number to search here.')
                            a.btn.btn-sm.btn-success(ng-click='searchResult()')
                                i.glyphicon.glyphicon-search
                                |   Search
                .table-responsive
                    table#userGrievancesTable(class="table table-striped table-bordered table-condensed")
                        thead.table-head
                            tr
                                th
                                th Reference Id
                                th Name
                                th Mobile Number
                                //th Grievance Type
                                //th Department
                                th Scheme
                                th Requirement
                                th Applied Date
                                th Responded Date
                                th Status
                                th Message
                        tbody
                            tr(ng-repeat='grievance in grievances')
                                td
                                    a.btn.btn-sm.btn-info.btn-vertical(href="", data-toggle="modal",id='grievancePrint', data-target="#myDetails", ng-click="showDetails(grievance)")
                                        i.glyphicon.glyphicon-print
                                        |   Print
                                    a.btn.btn-sm.btn-warning.btn-vertical(href="", ng-click="editDetails(grievance)", ng-if='grievance._serverData.status == "Open"')
                                        i.glyphicon.glyphicon-edit
                                        |   Edit
                                td
                                    span {{ grievance.id }}
                                td
                                    span {{ grievance._serverData.name }}
                                td
                                    span {{ grievance._serverData.phoneNumber }}
                                //td
                                //    span {{ grievance.grievanceType }}
                                //td
                                //    span {{ grievance._serverData.department }}
                                td
                                    span {{ grievance._serverData.scheme }}
                                td
                                    span {{ grievance._serverData.requirement }}
                                td
                                    span {{ grievance._serverData.applicationDate }}
                                td
                                    span {{ grievance._serverData.respondedDate }}
                                td
                                    span {{ grievance._serverData.status }}
                                td
                                    span {{ grievance._serverData.message }}

                    .pull-right
                        button.btn.btn-info.btn-sm#prev(ng-click='pageBack()', ng-disabled='noPrevious')
                            i.glyphicon.glyphicon-arrow-left
                            |      Previous
                        button.btn.btn-info.btn-sm#next(ng-click='pageNext()', ng-disabled='noNext')
                            |      Next
                            i.glyphicon.glyphicon-arrow-right
                    .alert.alert-info(ng-show='noRecords')
                        | No records found!


