section.container
    .row
        .col-lg-12
            .panel.panel-primary
                .panel-heading Admin Users
                .panel-body
                    .loader-div(ng-show='loading')
                        h4 Loading, Please wait...
                    .main-div(ng-show="loadDone")
                        .search.col-xs-4.pull-right
                            input(type="search", class="form-control", ng-model="filter.$", placeholder="search user", ng-keypress="searchFilter()")
                        .table-responsive
                            table(class="table table-striped table-bordered table-condensed")
                                thead
                                    th #
                                    th User Id
                                    th User Name
                                    th Mobile Number
                                    th Ward
                                    th Role
                                    th Email
                                tbody
                                    tr(ng-repeat='user in users')
                                        td
                                            button.btn.btn-info.btn-sm#manage(ng-click="manageUser(user)")
                                                i.glyphicon.glyphicon-edit
                                                |   Manage
                                        td
                                            span {{ user.id }}
                                        td
                                            span {{ user._serverData.name }}
                                        td
                                            span {{ user._serverData.mobileNumber }}
                                        td
                                            span {{ user._serverData.ward }}
                                        td
                                            span {{ user._serverData.role }}
                                        td
                                            span {{ user._serverData.email }}

